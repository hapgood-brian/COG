PAL_CFLAGS = -O3 -I../usr/share/boost/1.84.0 -I../src/core/include -DNDEBUG=1 -include ../src/core/include/eon/eon.h -target arm-apple-linux-elf

rule CXX_PAL
  command = /usr/bin/clang++ $CXX_FLAGS $PAL_CFLAGS -Wc++20-extensions -std=c++20 -lstdc++ -o $out -c $in
  description = Building C++ object $out

rule C_PAL
  command = /usr/bin/clang $PAL_CFLAGS -o $out -c $in
  description = Building C object $out

rule STATIC_LIB_PAL
  command = $PRE_LINK && /usr/bin/ar qc $TARGET_FILE $in && /usr/bin/ranlib $TARGET_FILE && $POST_BUILD
  description = Linking static library $out
  restat = $RESTAT
