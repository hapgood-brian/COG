STARTUP_CFLAGS = -O3 -I../usr/share/boost/1.84.0 -DNDEBUG=1 -include ../src/core/include/eon/eon.h -target armv6-pc-linux-elf

rule CXX_STARTUP
  command = /usr/bin/clang++ $CXX_FLAGS $STARTUP_CFLAGS -Wc++20-extensions -std=c++20 -lstdc++ -o $out -c $in
  description = Building C++ object $out

rule C_STARTUP
  command = /usr/bin/clang $STARTUP_CFLAGS -o $out -c $in
  description = Building C object $out

rule STATIC_LIB_STARTUP
  command = $PRE_LINK && /usr/bin/ar qc $TARGET_FILE $in && /usr/bin/ranlib $TARGET_FILE && $POST_BUILD
  description = Linking static library $out
  restat = $RESTAT
