COG_CFLAGS = -O3 -I../src/applications/include -I../usr/share/boost/1.71.0 -I../src/lua/5.4.0 -I../src/core/include -DNDEBUG=1 -include ../src/core/include/eon/eon.h

rule CXX_COG
  command = /usr/bin/clang++ $CXX_FLAGS $COG_CFLAGS -o $out -c $in
  description = Building C++ object $out

rule C_COG
  command = /usr/bin/clang $COG_CFLAGS -o $out -c $in
  description = Building C object $out

rule ELF_LINKER_COG
  command = $PRE_LINK && /usr/bin/clang++ $in -o $TARGET_FILE $LINK_LIBRARIES && $POST_BUILD
  description = Linking ELF binary $out
