PRECOG_CFLAGS = -O3 -I../usr/share/boost/1.84.0 -I../src/console/precog/include -I../src/lua/5.4.4 -I../src/core/include -DNDEBUG=1 -include ../src/core/include/eon/eon.h

rule CXX_PRECOG
  command = /usr/bin/clang++ $CXX_FLAGS $PRECOG_CFLAGS -Wc++20-extensions -std=c++20 -lstdc++ -o $out -c $in
  description = Building C++ object $out

rule C_PRECOG
  command = /usr/bin/clang $PRECOG_CFLAGS -o $out -c $in
  description = Building C object $out

rule MACHO_LINKER_PRECOG
  command = $PRE_LINK && /usr/bin/clang++ $in -o $TARGET_FILE $LINK_LIBRARIES && $POST_BUILD
  description = Linking MACHO binary $out
