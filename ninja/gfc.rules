GFC_CFLAGS = -O3 -I../usr/share/boost/1.84.0 -I../src/lz4/include -I../src/core/include -DNDEBUG=1 -include ../src/core/include/eon/eon.h

rule CXX_GFC
  command = /usr/bin/clang++ $CXX_FLAGS $GFC_CFLAGS -lstdc++ -o $out -c $in
  description = Building C++ object $out

rule C_GFC
  command = /usr/bin/clang $GFC_CFLAGS -o $out -c $in
  description = Building C object $out

rule STATIC_LIB_GFC
  command = $PRE_LINK && /usr/bin/ar qc $TARGET_FILE $in && /usr/bin/ranlib $TARGET_FILE && $POST_BUILD
  description = Linking static library $out
  restat = $RESTAT
